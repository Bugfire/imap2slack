       title == '宅急便お届けのお知らせ') {
    var msg;
    if (/ご不在でしたので持ち帰りました。/.test(txt)) {
      msg = get_lines(txt, 5, 6)
          + get_lines(txt, 7, 9)
          + get_lines(txt, 10, 12)
          + get_lines(txt, 13, 14)
          + get_lines(txt, 15, 17)
          + get_lines(txt, 18, 19);
    } else {
      msg = get_lines(txt, 6, 9)
          + get_lines(txt, 12, 16);
    }
    callback('クロネコヤマト' + title, msg);

  } else if ((from == test_addr ||
              from == 'info@ds.sagawa-exp.co.jp') &&
             title == '佐川配達予定案内') {
    var msg;
    msg = get_lines(txt, 7, 11)
        + get_lines(txt, 14, 16)
        + get_lines(txt, 38, 40);
    callback(title, msg);

  } else {
    callback();
  }
};

