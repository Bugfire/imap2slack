var get_lines = function(text, l0, l1) {
  var lines = text.split('\n');
  if (l0 > lines.length)
    return '';
  if (l1 > lines.length)
    l1 = lines.length;
  if (l0 > l1)
    return '';
  return lines.slice(l0, l1).join('\n') + '\n';
};

var search_line = function(text, str) {
  var lines = text.split('\n');
  for (var i in lines) {
    var j = lines[i];
    if (j.indexOf(str) == 0)
      return i;
  }
  return -1;
} 

function mail_filter(from, title, txt, callback) {
